---
import Layout from '../layouts/Layout.astro';
---
<Layout>

<section>
	<img src="/bydr.svg" alt="logo of bydr.studio" width="200" />
		<video autoplay muted loop>
  		<source src="/src/assets/placeholder.mp4" type="video/mp4">
		</video>
</section>

</Layout>

<style>
	section {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		background-color: #000;
		height: 100dvh;
		gap: 2rem;
	}
	video {	
		max-width: 100dvw;
		filter: blur(10px);;
	}
	img {
		z-index: 2;
		position: absolute;
	}